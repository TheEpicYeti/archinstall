fh() {
  local cmd
  cmd=$(history 1 | fzf --tac --preview-window=up:75% | sed 's/^[ ]*[0-9]*[ ]*//')
  if [[ -n "$cmd" ]]; then
    echo -e "Execute: ${GREENON}$cmd${COLOUROFF}"
    printf "Run this command? (Y/n): "
    read -r REPLY
    if [[ $REPLY =~ ^[Nn]$ ]]; then
      echo "${REDON}Command cancelled.${COLOUROFF}"
    else
      echo "Executing ${GREENON}$cmd${COLOUROFF}"
      eval "$cmd"
    fi
  fi
}


