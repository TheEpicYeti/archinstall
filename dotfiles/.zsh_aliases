fh() {
  local cmd
  cmd=$(history 1 | fzf --tac --preview-window=up:75% | sed 's/^[ ]*[0-9]*[ ]*//')
  if [[ -n "$cmd" ]]; then
    echo -e "Execute: ${GREEN}$cmd${RC}"
    printf "Run this command? (Y/n): "
    read -r REPLY
    if [[ $REPLY =~ ^[Nn]$ ]]; then
      echo "${RED}Command cancelled.${RC}"
    else
      echo "Executing ${GREEN}$cmd${RC}"
      eval "$cmd"
    fi
  fi
}

