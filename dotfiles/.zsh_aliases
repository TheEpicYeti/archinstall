# SEARCH INSTALLED PACKAGES
searchin() 
  {
    pacman -Qq | fzf --multi --preview 'pacman -Qil {}' --preview-window=up:60% | xargs -ro pacman -Qil | cat
  }


# UPDATE MIRRORS
update-mirrors() 
  {
    echo "${YELLOW}Backing up /etc/pacman.d/mirrorlist to /etc/pacman.d/mirrorlist-backup${RC}"
    sudo cp /etc/pacman.d/mirrorlist /etc/pacman.d/mirrorlist-backup
    echo "${YELLOW}Ranking mirrors in progress...${RC}"
    curl -s "https://archlinux.org/mirrorlist/?country=FR&country=DE&country=GB&protocol=https&ip_version=4&use_mirror_status=on" | \
      sed -e 's/^#Server/Server/' -e '/^#/d' | \
      rankmirrors -n 20 - | \
      sudo tee /etc/pacman.d/mirrorlist
  }


##################################################
######   ISO MOUNTING ALIASES & FUNCTIONS   ######
##################################################

# MOUNT ISO SCRIPT (mountiso path/to/iso.iso)
mountiso() 
  {
    if [ "`mount | grep /mnt/iso`" ]; then
      echo "${RED}/mnt/iso is already in use.${RC}"
      return
    fi
    if [ ! "$1" ]; then
      echo "${RED}Missing iso image argument.${RC}"
      return
    fi
    if [ ! -f $1 ]; then
      echo "${RED}$1: iso image not found.${RC}"
      return
    fi

    sudo mount -o loop,ro $1 /mnt/iso
    echo "${GREEN}iso mounted successfully.${RC}"

    nohup dolphin "/mnt/iso/" > /dev/null 2>&1 &
    disown
    exit
  }

# UNMOUNT ISO FROM /mnt/iso
alias umountiso="sudo umount /mnt/iso"


####################################
######   UPDATE ZSH PLUGINS   ######
####################################

zshupdate() 
  {
    cd $HOME/.zsh-plugins/fzf-tab/
    echo "${YELLOW}Updating fzf-tab...${RC}"
    git pull
    cd $HOME/.zsh-plugins/zsh-autosuggestions/
    echo "${YELLOW}Updating zsh-autosuggestions...${RC}"
    git pull
    cd $HOME/.zsh-plugins/zsh-syntax-highlighting/
    echo "${YELLOW}Updating zsh-syntax-highlighting...${RC}"
    git pull
  }


