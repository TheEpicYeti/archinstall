zshupdate() 
  {
    cd $HOME/.zsh-plugins/fzf-tab/
    echo "${YELLOWON}Updating fzf-tab...${COLOUROFF}"
    git pull
    cd $HOME/.zsh-plugins/zsh-autosuggestions/
    echo "${YELLOWON}Updating zsh-autosuggestions...${COLOUROFF}"
    git pull
    cd $HOME/.zsh-plugins/zsh-syntax-highlighting/
    echo "${YELLOWON}Updating zsh-syntax-highlighting...${COLOUROFF}"
    git pull
  }


