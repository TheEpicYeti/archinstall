# REPLACE find WITH fd
alias find="fd"
compdef _fd find

fzff() 
  {
    fd --type f | fzf
  }

fzfd() 
  { 
    fd --type d | fzf
  }

fzfp()
  {
    fzf --multi --preview='bat --color=always --style=numbers {}' --preview-window=up:75%
  }

